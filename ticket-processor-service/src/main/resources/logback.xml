<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>web - %date [%thread] %-5level %logger{36} - %message%n
            </pattern>
        </encoder>
    </appender>

    <logger name="org.springframework" level="INFO" />

    <logger name="org.springframework" level="OFF" />

    <logger name="com.redhat.jbuenosv.ocpmicroservicesddd.sales.ticketing.application.configuration" level="DEBUG" />
    <logger name="com.redhat.jbuenosv.ocpmicroservicesddd.sales.ticketing.domain.model" level="DEBUG" />
    <logger name="com.redhat.jbuenosv.ocpmicroservicesddd.sales.ticketing" level="DEBUG" />
    <logger name="com.redhat.jbuenosv.ocpmicroservicesddd.sales.ticketing.application.service" level="DEBUG" />
    <logger name="com.redhat.jbuenosv.ocpmicroservicesddd.sales.ticketing.application.handler" level="DEBUG" />
    <logger name="com.redhat.jbuenosv.ocpmicroservicesddd.sales.ticketing.application.handler.controller" level="DEBUG" />
    <logger name="com.redhat.jbuenosv.ocpmicroservicesddd.sales.ticketing.infrastructure.store" level="DEBUG" />

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>
